{
    "name": "akipe/learning_code_software_craft",
    "description": "Several projects for learning Software Craft",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "behat/behat": "^3.13",
        "phpro/grumphp-shim": "^2.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Akipe\\LearningCodeSoftwareCraft\\": "src/"
        },
        "classmap": ["features"]
    },
    "authors": [
        {
            "name": "Julien Milletre Akipe",
            "email": "code.julien@milletre.fr"
        }
    ],
    "scripts": {
      "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
      "test-bdd": "./vendor/bin/behat"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    }
}
